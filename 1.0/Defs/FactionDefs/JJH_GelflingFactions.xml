      </li>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <!--PawnKinds-->
          <JJH_GelflingKindVillager>100</JJH_GelflingKindVillager>
          <!--<JJH_GelflingKindGuard>400</JJH_GelflingKindGuard>
                    <JJH_GelflingKindAllMaudra>1</JJH_GelflingKindAllMaudra>-->
